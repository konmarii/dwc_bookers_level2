<div class="error-message">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>
<%= render 'books/list', user: @user, book: @newbook %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr></tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 90, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
              <% if @user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to 'Destroy', book_path(@book), class: "btn btn-sm btn-danger", method: :delete, data: {confirm: "削除しますか？"} %></td>
              <% end %>
            <td></td>
          </tr>
        </tbody>
      </table>

      <div class="comments">
      <p> Comments：<%= @book.book_comments.count %></p>
        <% @book.book_comments.each do |book_comment| %>
          <%= book_comment.user.name %>
          <%= book_comment.created_at.strftime('%Y/%m/%d') %></br>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <div class="text-right">
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger", id: "comment_destroy", method: :delete %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="new-comment">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <div class="form-group">
            <label for="book_comment">Book Comment</label>
            <div class="comment_field"><%= f.text_area :comment, rows:'5', placeholder: "Comment Here", id:"comment_field" %></div>
          </div>
          <div class="form-group">
            <button class="btn btn-success"><% f.submit '' %>Create Books Comment</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
