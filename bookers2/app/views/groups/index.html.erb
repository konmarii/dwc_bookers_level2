<%= render 'users/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Groups</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>introduction</th>
            <th>member</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= link_to attachment_image_tag group, :image, :fill, 90, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= link_to group.name, group_path(group.id) %></td>
              <td><%= group.introduction %></td>
              <td><%= group.users.count %></td>
              <td>
                <% if group.owner_id == @user.id %>
                  <%= link_to 'Edit', edit_group_path(group.id), class: "btn btn-success" %>
                <% end %>
              </td>
              <td><%= link_to 'Show', group_path(group.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

