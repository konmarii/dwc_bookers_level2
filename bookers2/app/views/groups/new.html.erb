<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="error-message">
        <% if @group.errors.any? %>
          <%= @group.errors.count %>errors prohibited this group from being saved:
          <% @group.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>
      <h2>Create Group</h2>
      <%= form_with model:@group, url:'/groups', local:true do |f| %>
        <div class="form-group">
          <label for="group_name">Name</label>
          <div>
            <%= f.text_field :name, autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <label for="group_introduction">Introduction</label>
          <div>
            <%= f.text_field :introduction, autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <label for="group_image">Image</label>
          <div>
            <%= f.attachment_field :image, placeholder: "グループ画像" %>
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-success"><% f.submit %>Create Group</button>
        </div>
      <% end %>
    </div>
  </div>
</div>