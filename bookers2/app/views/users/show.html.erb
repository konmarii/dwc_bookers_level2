<%= render 'users/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th>Comment</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td><%= link_to attachment_image_tag @user, :profile_image, :fill, 90, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td></td>
              <td>Comment：<%= @book.book_comments.count %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <h4>投稿数の前日比・前週比</h4>
      <table class="table table-hover table-inverse">
        <thread>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
        </thread>
        <tbody>
          <tr>
            <td><%= @books_today.count %></td>
            <td><%= @books_yesterday.count %></td>
            <td>
              <% if @books_yesterday.count == 0 %>
                前日の投稿はありません
              <% else %>
                <% @books_dod = @books_yesterday.count / @books_today.count.to_f %>
                <%= @books_dod * 100 %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <table class="table table-hover table-inverse">
        <thread>
          <tr>
            <th>今週の投稿数</th>
            <th>前週の投稿数</th>
            <th>前週比</th>
          </tr>
        </thread>
        <tbody>
          <tr>
            <td><%= @books_this_week.count %></td>
            <td><%= @books_last_week.count %></td>
            <td>
              <% if @books_last_week.count == 0 %>
                前週の投稿はありません
              <% else %>
                <% @books_wow = @books_last_week.count / @books_this_week.count.to_f %>
                <%= @books_wow * 100 %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
